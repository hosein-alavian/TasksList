<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    android:minHeight="110dp"
    app:cardBackgroundColor="@color/indigo_200"
    app:cardCornerRadius="7dp">

    <TextView
        android:id="@+id/username_row_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingLeft="7dp"
        android:paddingTop="2dp"
        android:paddingRight="7dp"
        android:paddingBottom="7dp"
        android:textAllCaps="true"
        android:textColor="@color/indigo_900"
        android:textSize="50sp"
        android:textStyle="bold"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/tasksnumber_row_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="6dp"
        android:text="@string/tasks_number"
        android:textColor="@color/indigo_800"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/registerdate_row_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:padding="6dp"
        android:text="register date"
        android:textColor="@color/indigo_800"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/removeUser_imageButton"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_gravity="right|top"
        android:background="@color/indigo_200"
        app:srcCompat="@drawable/removeuser_menu_image" />

</com.google.android.material.card.MaterialCardView>